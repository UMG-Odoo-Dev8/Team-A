<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="exam_report" model="ir.actions.report">
        <field name="name">Exam Report Card</field>
        <field name="model">school.exam</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">School_Intern_Project.report_exam</field>
        <field name="report_file">School_Intern_Project.report_exam</field>
        <!-- <field name="print_report_name">'%s' % object.name</field> -->
        <field name="binding_model_id" ref="model_school_exam"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_exam">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
        <div>
            <style>
            table,td,th,tr{
                border: 1pt solid grey;
                border-radius:1pt;
                <!-- margin:50px 50px 50px 100px; -->
            }
            
            </style>
        <center>
        <h2>Student Exam Report</h2>
        </center>
        <div class="page">
        
        
            <br><table style="width:100%">
                <tr style="height:50px">
                    <th ><center>Roll No</center></th>
                    <th ><center>Name</center></th>
                    <th ><center>Section Name</center></th>
                    <th ><center>Course</center></th>
                    <th ><center>Exam Mark</center></th>
                    <th ><center>Status</center></th>
                </tr>
                <tr>
                    <td><span t-field="o.roll_no"></span></td>
                    <td><span t-field="o.stu_name"></span></td>
                    <td><span t-field="o.sections"></span></td>
                    <td><span t-field="o.subject_id"></span></td>
                    <td><span t-field="o.exam_mark"></span></td>
                    <td><span t-field="o.status"></span></td>
                </tr>
        
            </table></br>
        

        <br><br><a href="http://wkhtmltopdf.org/" target="_blank"></a></br></br>
        </div>
        </div>
        <!-- </t> -->
        </t>
    </t>
    </template>

</odoo>




