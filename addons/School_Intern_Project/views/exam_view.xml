<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="school_exam_form" model="ir.ui.view">
        <field name="name">school.exam.form</field>
        <field name="model">school.exam</field>
        <field name="arch" type="xml">
            <form string="Exam Question">
                <header>
                    <!-- <button name="action_in_examination" string="In Examination" class="oe_highlight" type="object" state="draft"/> -->
                    <button name="action_done" string="Save" class="oe_highlight" type="object" state="done"/>
                    <button name="action_cancel" string="Cancel" type="object" state="draft,in_examination"/>
                    <button name="action_draft" string="Reset to draft" type="object" state="cancel"/>
                    <field name="state" widget="statusbar" nolabel="1" options="{'clickable':'1'}"  statusbar_visible="draft,in_exam,done"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="subject_id" required = '1'/>
                            <field name="exam_roll_no" domain = "[('status', '=', 'Pass')]" required = '1' />
                        </group>
                        <group>
                            <field name="stu_name"/>  
                            <field name="sections" string="Section" />
                        </group>
                    </group>
                    <notebook>
                        <page name="exam question" string="Question">
                            <field name="exam_ids">
                                <tree editable="bottom">
                                    <field name="question_text"/>
                                    <field name="answer" invisible = '1'/>
                                    <field name="exam_answer"/>
                                    <field name="score"/>
                                </tree>
                                <form>
                                    <group>
                                        <group>
                                            <field name="question_text"/>
                                        </group>
                                        <group>
                                            <field name="answer" invisible = '1'/>
                                        </group>
                                        <group>
                                            <field name="exam_answer"/>
                                        </group>
                                        <group>
                                            <field name="score"/>
                                        </group>
                                    </group>
                                </form>
                            </field>   
                        </page>
                    </notebook>
                    <group>
                        <button name="exam_result" string="Submit" type="object" class="oe_highlight"/>
                    </group>
                    <group >
                        <field name="exam_mark" readonly="True" />
                        <field name="status" readonly="True" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="school_exam_view_tree" model="ir.ui.view">
        <field name="name">school_exam.view.tree</field>
        <field name="model">school.exam</field>
        <field name="arch" type="xml">
            <tree decoration-success="status == 'Pass with Distinction'"
                        decoration-info="status == 'Pass'"
                        decoration-danger="status == 'Fail'">
                <field name="stu_name" />
                <field name="exam_roll_no" />
                <field name="subject_id" />
                <field name="exam_mark" />
                <field name="status" 
                       decoration-success="status == 'Pass with Distinction'"
                       decoration-info="status == 'Pass'"
                       decoration-danger="status == 'Fail'"
                       widget="badge" />
                <field name="state" />
            </tree>
        </field>
    </record>

    <record id="school_exam_action" model="ir.actions.act_window">
        <field name="name">Exam</field>
        <field name="res_model">school.exam</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="exam_sub_menu"
        name="Exam"
        action="school_exam_action"
        parent="teachers_students_root_menu"
        sequence="20"/>

</odoo>
