<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="school_exam_form" model="ir.ui.view">
        <field name="name">school.exam.form</field>
        <field name="model">school.exam</field>
        <field name="arch" type="xml">
            <form string="Exam Question">
                <sheet>
                    <group>
                        <group>
                            <field name="subject_id" />
                        </group>
                        <group>
                            <field name="stu_name" domain = "[('status', '=', 'Pass')]" />
                        </group>
                    </group>
                    <notebook>
                        <page name="exam question" string="Question">
                            <field name="exam_ids">
                                <tree editable="bottom">
                                    <field name="question_text"/>
                                    <field name="exam_answer"/>
                                    <field name="score"/>
                                </tree>
                                <form>
                                    <group>
                                        <group>
                                            <field name="question_text"/>
                                        </group>
                                        <group>
                                            <field name="exam_answer"/>
                                        </group>
                                        <group>
                                            <field name="score"/>
                                        </group>
                                    </group>
                                </form>
                            </field>   
                        </page>
                    </notebook>
                    <group>
                        <button name="exam_result" string="Submit" type="object" class="oe_highlight"/>
                    </group>
                    <group >
                        <field name="exam_mark" readonly="True" />
                    </group>
                    <group >
                        <field name="status" readonly="True" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

